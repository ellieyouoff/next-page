@model NP.Models.Book
@using Microsoft.AspNetCore.Identity;
@using NP.Models;
@using NP.Data;
@inject UserManager<User> userManager
@inject IHttpContextAccessor HttpContextAccessor
@inject SignInManager<User> SignInManager;


@using NP.Controllers
@{
    ViewData["Title"] = "Details";
    var currentUser = userManager.GetUserAsync(User).Result;
}


<h1>Details</h1>
<hr />


<div class="container">
    <div class="pb-4">
        <h4 class="py-2">@Model.Title</h4>
        <h6 style="color:darkorange">Author: @Model.Author</h6>
        @if (Model.CurrentlyHeldBy != null)
        {
            <a class="link-warning" asp-controller="Account" asp-action="Details" asp-route-id="@Model.CurrentlyHeldById">Currently held by: @Model.CurrentlyHeldBy.UserName</a>
        }

    </div>

    <div class="row mt-3">
        <div class="col-5 mt-3">

            <img class="mb-4" src="@Model.Img" style="width:320px;height:500px;object-fit:cover" alt="..." />
            <div>
                <p style="color:darkgrey">Added by: @Model.PostedBy.UserName</p>
                <p style="color:darkgrey">Difficulty: @Model.Difficulty</p>
            </div>

        </div>

            <div class="col-6 mt-3">
                <div class="pb-4">
                    <h6 class="text-secondary">Average Rating: @Model.Rating (@Model.RatedCount)</h6>
                    @if (User.Identity.IsAuthenticated)
                        {
                        @using (Html.BeginForm("RegisterRating", "Book", new { id = Model.BookId }, FormMethod.Post))
                            {
                            <div class="d-flex align-items-center">
                                <label for="rating">Rate this book:</label>
