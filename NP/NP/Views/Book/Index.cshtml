@model IEnumerable<Book>
@*Define view data*@
@{
    ViewData["Title"] = "Browse Books";
}


@*Code*@
<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h1 class="display-4 font-weight-normal">Engage in Book Crossing</h1>
        <p class="lead font-weight-normal">Book crossing is an initiative for those who love reading paper books. Why print more when you can share?</p>
        <a class="btn btn-outline-secondary" href="#">About</a>
    </div>
</div>

<h1 class="py-2">Browse Books</h1>

    <div class="row m-3 justify-content-start">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-sm-12 pt-5">
                <div class="card p-2 border-0">
                    <div class="card-body">
                        @if (item.Img != null)
                        {
                            <img src="@item.Img" class="card-img-top pb-3" style="width:320px;height:500px;object-fit:cover" alt="...">
                            }
                        else
                        {
                            <img src="https://i.postimg.cc/ZYs6zzbK/book-cover.png" class="card-img-top pb-3" style="width:320px;height:500px;object-fit:cover" alt="..." >
                        }

                        <div class="row">
                            <div class="col-7 py-3">
                                <a href="#" class="btn btn-warning btn-sm opacity-75">@Html.DisplayFor(modelItem => item.Genre)</a>
                            </div>

                        </div>
                        <h4 class="card-title py-2"><a style="text-decoration:none; color:black" asp-area="" asp-controller="Book" asp-action="Details" asp-route-id="@item.BookId">@Html.DisplayFor(modelItem => item.Title)</a></h4>
                        <h6 class="card-text py-2">Author: @Html.DisplayFor(modelItem => item.Author)</h6>

                        <p class="card-text py-2" >Difficulty: @Html.DisplayFor(modelItem => item.Difficulty)</p>
                        <p class="card-text text-truncate py-2">@Html.DisplayFor(modelItem => item.Description)</p>

                        <div class="py-2">
                            @if (item.CurrentlyHeldBy != null)
                            {
      
                                 <a style="color:darkorange" asp-area="" asp-controller="Account" asp-action="Details" asp-route-id="@item.CurrentlyHeldById">Currently: @Html.DisplayFor(modelItem => item.CurrentlyHeldBy.UserName)</a>

                            }
                        </div>
                       

                    </div>


                </div>

            </div>
        }
    </div>

